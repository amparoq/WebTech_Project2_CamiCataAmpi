<h1>New Executive</h1>
<%= form_with(model: @executive, url: executives_path) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>
  <div class="actions">
    <%= form.submit 'Create Executive' %>
  </div>
<% end %>
<%= link_to 'Back to Executives', executives_path %>
