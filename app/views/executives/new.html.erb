<h1>New Executive</h1>

<%= form_with model: @executive, url: executives_path do |form| %>
  <div class="form-floating mb-3">
    <%= form.text_field :name, class: 'form-control', id: 'floatingName', placeholder: 'Name' %>
    <%= form.label :name, 'Name', class: 'form-label', for: 'floatingName' %>
  </div>

  <div class="form-floating mb-3">
    <%= form.text_field :last_name, class: 'form-control', id: 'floatingLastName', placeholder: 'Last Name' %>
    <%= form.label :last_name, 'Last Name', class: 'form-label', for: 'floatingLastName' %>
  </div>

  <div class="form-floating mb-3">
    <%= form.email_field :email, class: 'form-control', id: 'floatingEmail', placeholder: 'Email' %>
    <%= form.label :email, 'Email', class: 'form-label', for: 'floatingEmail' %>
  </div>

  <div class="form-floating mb-3">
    <%= form.text_field :phone, class: 'form-control', id: 'floatingPhone', placeholder: 'Phone' %>
    <%= form.label :phone, 'Phone', class: 'form-label', for: 'floatingPhone' %>
  </div>

 
  <%= link_to 'Back to Executives', executives_path, class: 'btn btn-primary me-2' %>
  <%= form.submit 'Create Executive', class: 'btn btn-primary' %>

<% end %>