

<h1><%= @supervisor.user.name %> <%= @supervisor.user.last_name %> <span class="smaller">- <%= @supervisor.user.role %></span></h1>
<p>Email: <%= @supervisor.user.email %></p>
<p>Phone: <%= @supervisor.user.telephone %></p>

<%= link_to 'Create New Supervisor', new_supervisor_path, class: 'btn btn-primary' %>
<%= link_to 'Edit', edit_supervisor_path(@supervisor), class: 'btn btn-secondary' %>
<%= link_to 'Destroy', @supervisor, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
<%= link_to 'Back to Supervisors', supervisors_path, class: 'btn btn-secondary' %>