<style>
  .badge-primary {
    background-color: #c14884;
    color: #0f0c0c;
  }

  .badge-secondary {
    background-color: #6a77d8;
    color: #0f0c0c;
  }

  .badge-tertiary {
    background-color: #7aacf0;
    color: #0f0c0c;
  }

  .badge-quaternary {
    background-color: #afe1ec;
    color: #0f0c0c;
  }

  .tags {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
  }

  .tag-badge {
    margin-right: 5px;
    margin-bottom: 5px;
  }

  .response-info {
    margin-top: 20px;
    margin-bottom: 10px;
  }

  .response-text {
    background-color: #f6efef;
    padding: 10px;
    border-radius: 5px;
    margin-bottom: 5px;
  }

  .sep {
    margin-left: 8px;
    margin-right: 8px;
  }

  .tags-icon {
    margin-left: 4px;
    margin-bottom: 4px;
    margin-right: 4px;
  }

  .red-nice {
    background-color: #ff6f69;
    color: #fff;
    padding: 5px 10px;
    border-radius: 3px;
  }

  .yellow-nice {
    background-color: #ffcc5c;
    color: #0f0c0c;
    padding: 5px 10px;
    border-radius: 3px;
  }

  .green-nice {
    background-color: #88d8b0;
    color: #0f0c0c;
    padding: 5px 10px;
    border-radius: 3px;
  }
</style>

<div class="container my-5">
  <div class="card">
    <div class="card-body">
      <div class="ticket-info d-flex align-items-center justify-content-between">
        <h2 class="mb-0"><%= @ticket.title %></h2>
        <div class="badge-container">
          <% if @ticket.state == "open" %>
            <span class="badge rounded-pill red-nice">Open</span>
          <% elsif @ticket.state == "closed" %>
            <span class="badge rounded-pill green-nice">Closed</span>
          <% elsif @ticket.state == "reopened" %>
            <span class="badge rounded-pill yellow-nice">Reopened</span>
          <% end %>
        </div>
      </div>

      <div class="date-info d-flex align-items-center">
        <h6 class="mb-0">Creado el <%= @ticket.creation_date %></h6> 
        <% if @ticket.resolution_date %>
          <h6 class="sep">|</h6>
          <h6 class="mb-0">Cerrado el <%= @ticket.resolution_date %></h6>
        <% end %>
      </div>

      <div class="tags">
        <i class="bi bi-tags tags-icon"></i>
        <% @ticket.tags.each_with_index do |tag, index| %>
          <% color_class = ["badge-primary", "badge-secondary", "badge-tertiary", "badge-quaternary"][index % 4] %>
          <span class="badge tag-badge <%= color_class %>"><%= tag.name %></span>
        <% end %>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Creado por:</h4>
              <p class="card-text" style="font-size: 20px;"><%= @ticket.requiring_user.user.name %> <%= @ticket.requiring_user.user.last_name %></p>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Ejecutivo a cargo:</h4>
              <p class="card-text" style="font-size: 20px;"><%= @ticket.executive.user.name %> <%= @ticket.executive.user.last_name %></p>
            </div>
          </div>
        </div>
      </div>

      <div class="priority-info d-flex align-items-center">
        <h4 class="mb-0">Prioridad:</h4>
        <% if @ticket.priority == 1 %>
          <h4 class="text-danger mb-0 ms-3">Alta</h4>
        <% elsif @ticket.priority == 2 %>
          <h4 class="text-warning mb-0 ms-3">Media</h4>
        <% elsif @ticket.priority == 3 %>
          <h4 class="text-success mb-0 ms-3">Baja</h4>
        <% end %>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Description</h5>
              <p class="card-text"><%= @ticket.description %></p>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Response</h5>
              <% if @ticket.responses.any? %>
                <% @ticket.responses.each do |response| %>
                  <p class="response-text"><%= response.response %></p>
                <% end %>
              <% else %>
                <p class="card-text text-muted">No hay respuesta</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="actions-container d-flex justify-content-end mt-4">
      <%= link_to "Edit this ticket", edit_ticket_path(@ticket), class: "btn btn-primary me-2" %>
      <%= button_to "Destroy this ticket", @ticket, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>

    <div class="text-center mt-4">
      <button class="btn btn-secondary" onclick="history.back()">Back</button>
    </div>
  </div>
</div>
